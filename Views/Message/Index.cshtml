        <script>
            document.addEventListener('DOMContentLoaded', function () {
                // ... (Navbar & Notification Logic Omitted for brevity, same as before) ...
                // Only essential repeating logic included if needed, otherwise handled by user copying full file.
                // Including full script below for safety as requested.

                if (typeof escapeHTML === 'undefined') {
                    window.escapeHTML = function (str) {
                        const p = document.createElement("p");
                        p.textContent = (str === null || str === undefined) ? "" : str.toString();
                        return p.innerHTML;
                    }
                }

                const meMenuTrigger = document.getElementById('me-menu-trigger');
                const meMenu = document.getElementById('me-menu');
                if (meMenuTrigger) {
                    meMenuTrigger.addEventListener('click', function (event) {
                        event.stopPropagation();
