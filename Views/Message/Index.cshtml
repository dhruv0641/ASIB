                            notificationDropdown.classList.add('hidden');
                    });
                }

                const searchInput = document.getElementById('search-input');
                const resultsContainer = document.getElementById('search-results-container');
                let debounceTimer;
                if (searchInput) {
                    searchInput.addEventListener('input', function () {
                        const query = this.value;
                        clearTimeout(debounceTimer);
                        if (query.length < 1) {
                            resultsContainer.innerHTML = '';
                            resultsContainer.classList.add('hidden');
                            return;
                        }
                        debounceTimer = setTimeout(() => {
                            fetch(`/Users/Search?q=${encodeURIComponent(query)}`)
                                    .then(response => response.json())
                                    .then(users => {
                                        resultsContainer.innerHTML = '';
                                        if (users.length > 0) {
                                            users.forEach(user => {
                                                const item = document.createElement('a');
                                                item.href = `/Dashboard/UserProfile?id=${user.user_id}`;
                                                item.classList.add('search-result-item');
                                                const photoUrl = user.profile_photo_url ? escapeHTML(user.profile_photo_url) : 'https://placehold.co/40x40';
                                                const headline = user.headline ? escapeHTML(user.headline) : 'User';
                                                const fullName = escapeHTML(user.full_name);
                                                item.innerHTML = `
                                                <img src="${photoUrl}" alt="${fullName}">
                                                <div><strong>${fullName}</strong><br><span>${headline}</span></div>`;
                                                resultsContainer.appendChild(item);
                                            });
                                        } else {
                                            resultsContainer.innerHTML = '<div style="padding: 12px; font-size: 14px; color: var(--text-muted);">No results found.</div>';
                                        }
                                        resultsContainer.classList.remove('hidden');
                                    })
                                    .catch(error => console.error('Search error:', error));
                        }, 300);
                    });
                }

                const notificationTrigger = document.getElementById('notification-trigger');
                const notificationDropdown = document.getElementById('notification-dropdown');
                const notificationBadge = document.getElementById('notification-badge');
                const notificationList = document.getElementById('notification-list');
                const mobileNotificationTrigger = document.getElementById('mobile-notification-trigger');
                const mobileNotificationBadge = document.getElementById('mobile-notification-badge');

                function getNotificationText(notification) {
                    const sender_name = `<strong>${escapeHTML(notification.first_name + ' ' + notification.last_name)}</strong>`;
                    switch (notification.type) {
                        case 'like':
                            return `${sender_name} liked your post.`;
                        case 'comment':
                            return `${sender_name} commented on your post.`;
                        case 'follow':
                            return `${sender_name} started following you.`;
                        case 'connect_request':
                            return `${sender_name} sent you a connection request.`;
                        case 'connect_accept':
                            return `${sender_name} accepted your connection request.`;
                        case 'new_post':
                            return `${sender_name} published a new post.`;
                        case 'message':
                            return `${sender_name} sent you a new message.`;
                        default:
                            return 'New notification.';
                    }
                }

                function getNotificationLink(notification) {
                    const sender_id = notification.sender_id;
                    const entity_id = notification.entity_id;
                    switch (notification.type) {
                        case 'like':
                        case 'comment':
                        case 'new_post':
                            return `/Dashboard/ViewPost?id=${entity_id}`;
                        case 'follow':
                        case 'connect_accept':
                            return `/Dashboard/UserProfile?id=${sender_id}`;
                        case 'connect_request':
                            return '/Dashboard/MyNetwork';
                        case 'message':
                            return `/Messages/Conversation/${sender_id}`;
                        default:
                            return '#';
                    }
                }

                function fetchNotificationCount() {
                    fetch('/Notifications/Count')
                            .then(response => response.json())
                            .then(data => {
                                if (data.unread_count > 0) {
                                    if (notificationBadge) {
                                        notificationBadge.textContent = data.unread_count;
                                        notificationBadge.classList.remove('hidden');
                                    }
                                    if (mobileNotificationBadge) {
                                        mobileNotificationBadge.textContent = data.unread_count;
                                        mobileNotificationBadge.classList.remove('hidden');
                                    }
                                } else {
                                    if (notificationBadge)
                                        notificationBadge.classList.add('hidden');
                                    if (mobileNotificationBadge)
                                        mobileNotificationBadge.classList.add('hidden');
                                }
                            })
                            .catch(e => console.error("Error fetching notification count:", e));
                }

                function fetchNotificationList() {
                    if (!notificationList)
                        return;
                    notificationList.innerHTML = '<div style="padding: 20px; text-align: center; color: var(--text-muted);">Loading...</div>';
                    fetch('/Notifications/List')
                            .then(response => response.json())
                            .then(data => {
                                notificationList.innerHTML = '';
                                if (data.notifications && data.notifications.length > 0) {
                                    data.notifications.forEach(n => {
                                        const text = getNotificationText(n);
                                        const link = getNotificationLink(n);
                                        const isUnread = n.is_read == 0 ? 'unread' : '';
                                        const time_ago = new Date(n.created_at);
                                        const now = new Date();
                                        const diff = (now.getTime() - time_ago.getTime()) / 1000;
                                        let time_text = '';
                                        if (diff < 60)
                                            time_text = 'Just now';
                                        else if (diff < 3600)
                                            time_text = `${Math.floor(diff / 60)}m ago`;
                                        else if (diff < 86400)
                                            time_text = `${Math.floor(diff / 3600)}h ago`;
                                        else if (diff < 2592000)
                                            time_text = `${Math.floor(diff / 86400)}d ago`;
                                        else if (diff < 31536000)
                                            time_text = `${Math.floor(diff / 2592000)}mo ago`;
                                        else
                                            time_text = `${Math.floor(diff / 31536000)}y ago`;

                                        const item = document.createElement('a');
                                        item.href = link;
                                        item.innerHTML = `
                                        <div class="notification-item ${isUnread}">
                                            <img src="${escapeHTML(n.profile_photo_url)}" alt="Profile">
                                            <div><p>${text}</p><span>${time_text}</span></div>
                                        </div>`;
                                        notificationList.appendChild(item);
                                    });
                                } else {
                                    notificationList.innerHTML = '<div style="padding: 20px; text-align: center; color: var(--text-muted);">No new notifications.</div>';
                                }
                                fetch('/Notifications/MarkRead', {method: 'POST'});
                                if (notificationBadge)
                                    notificationBadge.classList.add('hidden');
                                if (mobileNotificationBadge)
                                    mobileNotificationBadge.classList.add('hidden');
                            })
                            .catch(e => console.error("Error fetching notification list:", e));
                }

                const openNotificationDropdown = (event) => {
                    event.stopPropagation();
                    if (!notificationDropdown)
                        return;
                    const isHidden = notificationDropdown.classList.toggle('hidden');
                    if (meMenu)
                        meMenu.classList.add('hidden');
                    if (!isHidden) {
                        fetchNotificationList();
                    }
                };

                if (notificationTrigger)
                    notificationTrigger.addEventListener('click', openNotificationDropdown);
                if (mobileNotificationTrigger)
                    mobileNotificationTrigger.addEventListener('click', openNotificationDropdown);

                if (!document.body.dataset.globalClickListenerAdded) {
                    document.addEventListener('click', function (event) {
                        if (meMenu && !meMenu.classList.contains('hidden') && meMenuTrigger && !meMenuTrigger.contains(event.target) && !meMenu.contains(event.target)) {
                            meMenu.classList.add('hidden');
                        }
                        if (notificationDropdown && !notificationDropdown.classList.contains('hidden') &&
                                notificationTrigger && !notificationTrigger.contains(event.target) && !notificationDropdown.contains(event.target) &&
                                mobileNotificationTrigger && !mobileNotificationTrigger.contains(event.target)
                                ) {
                            notificationDropdown.classList.add('hidden');
                        }
                        if (resultsContainer && !resultsContainer.classList.contains('hidden') && searchInput && !searchInput.contains(event.target)) {
                            resultsContainer.classList.add('hidden');
                        }
                    });
                    document.body.dataset.globalClickListenerAdded = 'true';
                }

                fetchNotificationCount();
                setInterval(fetchNotificationCount, 30000);
            });
        </script>
        <script>
            $(document).ready(function () {
                const chatContainer = $('.chat-container');
                const chatBackBtn = $('#chat-back-btn');
                const userListContainer = $('#user-list-container');
                const messageContainer = $('#message-container');
                const loggedInUserId = @Model.LoggedInUserId;
                let pollingInterval = null;
                const attachButton = $('#attach-button');
                const attachmentInput = $('#attachment-input');
                const attachmentPreview = $('#attachment-preview');
                const attachmentPreviewName = $('#attachment-preview-name');
                const attachmentPreviewCancel = $('#attachment-preview-cancel');
                let currentFile = null;
                const imageViewerModal = $('#image-viewer-modal');
                const imageViewerImg = $('#image-viewer-img');
                const imageViewerClose = $('#image-viewer-close');

                function escapeHTML(str) {
                    const p = document.createElement("p");
                    p.textContent = (str === null || str === undefined) ? "" : str.toString();
                    return p.innerHTML;
                }

                function displayUsers(users, activeUserId = null) {
                    userListContainer.empty();
                    if (!users || typeof users.forEach !== 'function') {
                        userListContainer.html('<p style="text-align: center; padding: 20px;">No users found.</p>');
                        return;
                    }
                    if (users.length === 0) {
                        userListContainer.html('<p style="text-align: center; padding: 20px;">No users found.</p>');
                        return;
                    }
                    users.forEach(user => {
                        let profilePhoto = user.profile_photo_url;
                        if (!profilePhoto) {
                            const initial = user.first_name ? user.first_name.charAt(0).toUpperCase() : '?';
                            profilePhoto = `https://placehold.co/50x50/6366f1/white?text=${initial}`;
                        }
                        let lastMessageText = user.last_message;
                        if (lastMessageText && lastMessageText.includes("SHARED_POST::")) {
                            lastMessageText = '<i class="fas fa-link"></i> Shared a post';
                        } else if (!lastMessageText && user.last_message_attachment) {
                            lastMessageText = '<em><i class="fas fa-paperclip"></i> Attachment</em>';
                        } else if (lastMessageText) {
                            lastMessageText = escapeHTML(lastMessageText);
                        } else {
                            lastMessageText = '...';
                        }
                        const statusText = user.is_online ? 'Online' : 'Offline';
                        const statusClass = user.is_online ? 'online' : '';
                        let unreadBadgeHtml = '';
                        if (user.unread_count > 0) {
                            unreadBadgeHtml = `<span class="unread-badge">${user.unread_count}</span>`;
                        }
                        const userHtml = `<div class="user-item" data-userid="${user.user_id}" data-name="${escapeHTML(user.first_name)} ${escapeHTML(user.last_name)}" data-photo="${escapeHTML(profilePhoto)}" data-status="${escapeHTML(statusText)}" data-role="${escapeHTML(user.role || '')}"><img src="${escapeHTML(profilePhoto)}" alt="Profile Photo"><div class="user-info"><div class="name">${escapeHTML(user.first_name)} ${escapeHTML(user.last_name)}</div><div class="last-message">${lastMessageText}</div></div><div class="user-status"><span class="role">${escapeHTML(user.role || '')}</span><span class="status-text ${statusClass}">${escapeHTML(statusText)}</span>${unreadBadgeHtml}</div></div>`;
                        userListContainer.append(userHtml);
                    });
                    if (activeUserId) {
                        userListContainer.find(`.user-item[data-userid="${activeUserId}"]`).addClass('active');
                }
                }

                async function loadUsers(activeUserId = null, callback = null, selectUserId = null) {
                    try {
                        let fetchUrl = '/Messages/Users';
                        if (selectUserId)
                            fetchUrl += `?select_user_id=${selectUserId}`;
                        const response = await fetch(fetchUrl);
                        if (!response.ok)
                            throw new Error('Network response was not ok');
                        const users = await response.json();
                        displayUsers(users, activeUserId);
                        if (callback)
                            callback();
                    } catch (error) {
                        console.error('Error loading users:', error);
                        userListContainer.html('<p style="text-align: center; padding: 20px; color: red;">Could not load users.</p>');
                }
                }

                $('#chat-search-bar').on('input', function () {
                    const searchTerm = $(this).val().trim();
                    const activeUserId = $('.user-item.active').data('userid');
                    if (searchTerm.length > 0) {
                        $.ajax({url: '/Messages/SearchUsers', type: 'POST', data: {search_term: searchTerm}, dataType: 'json', success: function (users) {
                                displayUsers(users, activeUserId);
                            }, error: (jqXHR, textStatus, errorThrown) => {
                                console.error('Search error:', textStatus, errorThrown);
                            }});
                    } else {
                        loadUsers(activeUserId, null, null);
                    }
                });

                userListContainer.on('click', '.user-item', function () {
                    activateChat($(this));
                });

                chatBackBtn.on('click', function () {
                    chatContainer.removeClass('chat-active');
                    $('body').removeClass('chat-active');
                    $('html').removeClass('chat-active');
                    if (window.messagePollInterval)
                        clearInterval(window.messagePollInterval);
                    $('#current-receiver-id').val('');
                });

                function activateChat(userItemElement) {
                    if (!userItemElement || userItemElement.length === 0)
                        return;
                    if (pollingInterval)
                        clearInterval(pollingInterval);
                    resetAttachment();
                    $('.user-item').removeClass('active');
                    userItemElement.addClass('active');
                    userItemElement.find('.unread-badge').remove();
                    const userId = userItemElement.data('userid');
                    const userName = userItemElement.data('name');
                    const userPhoto = userItemElement.data('photo');
                    const userStatus = userItemElement.data('status');
                    const userRole = userItemElement.data('role');
                    $('#current-receiver-id').val(userId);
                    const chatHeader = $('#chat-window .chat-header');
                    chatHeader.find('.name').text(userName);
                    chatHeader.find('img').attr('src', userPhoto);
                    chatHeader.find('.status').text(userRole ? `${userRole} | ${userStatus}` : userStatus);
                    $('#welcome-screen').hide();
                    $('#chat-window').css('display', 'flex');

                    chatContainer.addClass('chat-active');
                    $('body').addClass('chat-active');
                    $('html').addClass('chat-active');

                    loadMessages(userId);
                    if (window.messagePollInterval)
                        clearInterval(window.messagePollInterval);
                    window.messagePollInterval = setInterval(() => loadMessages(userId), 3000);
                }

                function loadMessages(receiverId) {
                    $.ajax({
                        url: `/Messages/Conversation/${receiverId}`, type: 'POST', dataType: 'json',
                        success: function (messages) {
                            const wasScrolledToBottom = messageContainer.scrollTop() + messageContainer.innerHeight() >= messageContainer[0].scrollHeight - 50;
                            messageContainer.empty();
                            if (!messages || messages.status === 'error') {
                                messageContainer.html(`<p style="text-align: center; padding: 20px;">${messages ? messages.message : 'Error loading messages.'}</p>`);
                                return;
                            }
                            if (!Array.isArray(messages))
                                return;

                            messages.forEach(msg => {
                                let messageClass = (msg.sender_id == loggedInUserId) ? 'sent' : 'received';
                                let statusText = (msg.sender_id == loggedInUserId) ? ((msg.status == 1) ? 'Seen' : 'Sent') : '';
                                const time = new Date(msg.sent_at).toLocaleTimeString([], {hour: '2-digit', minute: '2-digit'});

                                let contentHtml = '';
                                let customMessageText = msg.content;
                                let postData = null;

                                const sharedPostPrefix = "SHARED_POST::";
                                // Check if the message contains the shared post tag ANYWHERE in the string
                                if (msg.content && msg.content.includes(sharedPostPrefix)) {
                                    const splitIndex = msg.content.indexOf(sharedPostPrefix);

                                    // Separate the text typed by user from the shared post data
                                    // 1. The Text part (before the tag)
                                    customMessageText = msg.content.substring(0, splitIndex).trim();

                                    // 2. The JSON part (everything after the tag)
                                    const jsonPart = msg.content.substring(splitIndex + sharedPostPrefix.length);

                                    try {
                                        postData = JSON.parse(jsonPart);
                                    } catch (e) {
                                        // If JSON parsing fails, just show the raw content as a fallback
                                        customMessageText = msg.content;
                                        postData = null;
                                    }
                                }

                                if (customMessageText) {
                                    contentHtml += `<div class="message-text">${escapeHTML(customMessageText).replace(/\n/g, '<br>')}</div>`;
                                }
                                if (msg.attachment_path) {
                                    let fileName = msg.attachment_path.split('/').pop();
                                    
                                    // FIX: Better filename cleaning to remove random prefixes
                                    // Removes prefixes like "1732201234_myfile.txt" or "6920abc_config"
                                    if (fileName.indexOf('_') > -1) {
                                        // Check if the part before the underscore looks like a generated ID (alphanumeric)
                                        // Regex checks for alphanumeric characters before the first underscore
                                        fileName = fileName.replace(/^[a-zA-Z0-9]+_/, '');
                                    }

                                    const safePath = escapeHTML(msg.attachment_path);
                                    const safeFileName = escapeHTML(fileName);
                                    if (msg.attachment_type && msg.attachment_type.startsWith('image/')) {
                                        contentHtml += `<div class="message-attachment"><a href="${safePath}" target="_blank" title="${safeFileName}"><img src="${safePath}" alt="Attachment"></a></div>`;
                                    } else {
                                        contentHtml += `<div class="message-attachment"><a href="${safePath}" target="_blank" download><i class="fas fa-file-alt"></i><span class="file-name">${safeFileName}</span></a></div>`;
                                    }
                                }
                                if (postData) {
                                    const safeAuthor = escapeHTML(postData.author);
                                    const safeSnippet = escapeHTML(postData.content_snippet);
                                    let imageHtml = '';
                                    if (postData.image_url) {
                                        imageHtml = `<a href="#" class="shared-post-image-link view-shared-post-image" data-image-url="${escapeHTML(postData.image_url)}"><img src="${escapeHTML(postData.image_url)}" class="shared-post-image" alt="Post image"></a>`;
                                    }
                                    contentHtml += `<div class="shared-post-preview">${imageHtml}<div class="shared-post-content"><span class="shared-post-author">Post by ${safeAuthor}</span><p class="shared-post-text">${safeSnippet}</p></div></div>`;
                                }

                                const messageHtml = ` <div class="message-wrapper ${messageClass}"><div class="message">${contentHtml}</div><div class="message-details"><span class="timestamp">${time}</span>${statusText ? `<span class="message-status">${statusText}</span>` : ''}</div></div> `;
                                messageContainer.append(messageHtml);
                            });
                            if (wasScrolledToBottom) {
                                messageContainer.scrollTop(messageContainer[0].scrollHeight);
                            }
                        }
                    });
                }

                function sendMessage() {
                    const message = $('#message-input').val().trim();
                    const receiverId = $('#current-receiver-id').val();
                    if (!message && !currentFile)
                        return;
                    if (!receiverId)
                        return;

                    const formData = new FormData();
                    formData.append('receiver_id', receiverId);
                    formData.append('message', message);
                    if (currentFile)
                        formData.append('attachment', currentFile);

                    $('#message-input').prop('disabled', true);
                    $('#send-button').prop('disabled', true).text('Sending...');

                    $.ajax({
                        url: '/Messages/Send', type: 'POST', data: formData, dataType: 'json', processData: false, contentType: false,
                        success: function (response) {
                            if (response && response.status === 'success') {
                                $('#message-input').val('');
                                resetAttachment();
                                loadMessages(receiverId);
                                loadUsers(receiverId);
                            } else {
                                alert('Error: ' + (response ? response.message : 'Unknown error'));
                            }
                        },
                        error: (jqXHR, textStatus, errorThrown) => {
                            alert(`Error sending message.`);
                        },
                        complete: function () {
                            $('#message-input').prop('disabled', false);
                            $('#send-button').prop('disabled', false).text('Send');
                        }
                    });
                }

                attachButton.on('click', function () {
                    attachmentInput.click();
                });
                attachmentInput.on('change', function () {
                    if (this.files && this.files[0]) {
                        currentFile = this.files[0];
                        attachmentPreviewName.text(currentFile.name);
                        attachmentPreview.removeClass('hidden');
                    }
                });
                attachmentPreviewCancel.on('click', function () {
                    resetAttachment();
                });
                function resetAttachment() {
                    currentFile = null;
                    attachmentInput.val(null);
                    attachmentPreview.addClass('hidden');
                    attachmentPreviewName.text('');
                }
                $('#send-button').on('click', sendMessage);
                $('#message-input').on('keypress', function (e) {
                    if (e.which == 13 && !e.shiftKey) {
                        e.preventDefault();
                        sendMessage();
                    }
                });
                messageContainer.on('click', '.view-shared-post-image', function (e) {
                    e.preventDefault();
                    const imageUrl = $(this).data('image-url');
                    if (imageUrl) {
                        imageViewerImg.attr('src', imageUrl);
                        imageViewerModal.addClass('visible');
                    }
                });
                imageViewerClose.on('click', function () {
                    imageViewerModal.removeClass('visible');
                    imageViewerImg.attr('src', '');
                });
                imageViewerModal.on('click', function (e) {
                    if (e.target === this) {
                        imageViewerModal.removeClass('visible');
                        imageViewerImg.attr('src', '');
                    }
                });

                const pathMatch = window.location.pathname.match(/\/Messages\/Conversation\/(\d+)$/i);
                const userIdToSelect = pathMatch ? pathMatch[1] : null;
                let initialLoadCallback = null;
                if (userIdToSelect) {
                    initialLoadCallback = function () {
                        const userItemToClick = userListContainer.find(`.user-item[data-userid="${userIdToSelect}"]`);
                        if (userItemToClick.length)
                            activateChat(userItemToClick);
                    };
                }
                loadUsers(null, initialLoadCallback, userIdToSelect);

                if (window.userListPollInterval)
                    clearInterval(window.userListPollInterval);
                window.userListPollInterval = setInterval(function () {
                    if (!$('#chat-search-bar').is(':focus')) {
                        const activeUserId = $('.user-item.active').data('userid');
                        loadUsers(activeUserId, null, null);
                    }
                }, 5000);
            });
        </script>
    </body>
