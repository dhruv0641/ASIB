                    <!-- Events Icon -->
                    <a asp-controller="Event" asp-action="Index" asp-route-view="schedule" class="nav-item @(Model.CurrentPage == "Event" ? "active" : "")"> 
                        <svg viewBox="0 0 24 24"><path d="M19 4h-1V2h-2v2H8V2H6v2H5c-1.11 0-1.99.9-1.99 2L3 20a2 2 0 0 0 2 2h14c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 16H5V10h14v10zm0-12H5V6h14v2zm-7 5h5v5h-5v-5z"/></svg>
                        <span>Events</span> 
                    </a>

                    <!-- Messaging Icon -->
                    <a asp-controller="Messages" asp-action="Index" class="nav-item @(Model.CurrentPage == "Message" ? "active" : "")"> 
                        <svg viewBox="0 0 24 24"><path d="M20 2H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h14l4 4V4c0-1.1-.9-2-2-2zm-2 12H6v-2h12v2zm0-3H6V9h12v2zm0-3H6V6h12v2z"/></svg>
                        <span>Messaging</span> 
                    </a>

                    <!-- Notification Icon -->
                    <div class="nav-item @(Model.CurrentPage == "Notifications" ? "active" : "")" id="notification-trigger">
                        <div class="nav-icon-wrapper"> 
                            <svg viewBox="0 0 24 24"><path d="M12 22c1.1 0 2-.9 2-2h-4c0 1.1.9 2 2 2zm6-6v-5c0-3.07-1.63-5.64-4.5-6.32V4c0-.83-.67-1.5-1.5-1.5s-1.5.67-1.5 1.5v.68C7.64 5.36 6 7.92 6 11v5l-2 2v1h16v-1l-2-2zm-2 1H8v-6c0-2.48 1.51-4.5 4-4.5s4 2.02 4 4.5v6z"/></svg>
                            <span id="notification-badge" class="notification-badge hidden"></span>
                        </div>
                        <span>Notifications</span>

                        <!-- Dropdown Code -->
                        <div id="notification-dropdown" class="dropdown-menu hidden" style="right: 0; width: 380px; top: 52px; max-height: 500px; overflow-y: auto;">
                            <div class="dropdown-header" style="justify-content: space-between; align-items: center;">
                                <strong style="font-size: 16px; padding: 0;">Notifications</strong>
                                <a asp-controller="Notifications" asp-action="Index" style="font-size: 13px; font-weight: 600; color: var(--brand-color); padding: 0; border: none;">View All</a>
                            </div>
                            <div id="notification-list">
                                <div style="padding: 20px; text-align: center; color: var(--text-muted);">Loading...</div>
                            </div>
                        </div>
                    </div>

                    <!-- Profile Me Icon -->
                    <div class="nav-item nav-profile" id="me-menu-trigger">
                        <img src="@Model.ProfilePhoto" alt="Profile">
                        <span>Me 
                            <!-- Caret Down Icon -->
                            <svg viewBox="0 0 24 24" style="width: 16px; height: 16px; margin-left: 4px;"><path d="M7 10l5 5 5-5z"/></svg>
                        </span>
                        <div class="dropdown-menu hidden" id="me-menu">
                            <div class="dropdown-header">
                                <img src="@Model.ProfilePhoto" alt="Profile">
                                <div>
                                    <strong>@Model.UserName</strong>
                                    <p>@Model.ProfileHeadline</p>
                                </div>
                            </div>
                            <a asp-controller="UserProfile" asp-action="Index" class="dropdown-link">View Profile</a>
                            <a asp-controller="Auth" asp-action="Logout" class="dropdown-link">Logout</a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        <main class="main-container">
            @if (Model.IsFaculty)
            {
                <div class="card"><h1>Manage Your Events</h1></div>
                <div class="card">
                    <h2>Create New Event</h2>
                    <form action="Event" method="POST">
                        <input type="hidden" name="action" value="create_event">
                        <div class="form-group"><label for="title">Event Title</label><input type="text" id="title" name="title" required></div>
                        <div class="form-group"><label for="description">Event Description</label><textarea id="description" name="description"></textarea></div>
                        <div class="form-group"><label for="start_time">Start Time</label><input type="datetime-local" id="start_time" name="start_time" required></div>
                        <div class="form-group"><label for="end_time">End Time (Optional)</label><input type="datetime-local" id="end_time" name="end_time"></div>
                        <div class="form-group"><label for="meeting_url">Meeting URL</label><input type="url" id="meeting_url" name="meeting_url" placeholder="https://"></div>
                        <button type="submit" class="btn">Create Event</button>
                    </form>
                </div>
                <div class="card">
                    <h2>Your Existing Events & Requests</h2>
                    @if (Model.FacultyEvents.Count > 0)
                    {
                        foreach (var ev in Model.FacultyEvents)
                        {
                            <div class="event-list-item">
                                <div class="event-header">
                                    <div class="event-details"><h3>@ev.Title (@ev.StartDateText)</h3></div>
                                    <div class="event-actions">
                                        <form action="Event" method="POST" onsubmit="return confirm('Are you sure you want to delete this event permanently?');">
                                            <input type="hidden" name="action" value="delete_event">
                                            <input type="hidden" name="event_id" value="@ev.EventId">
                                            <button type="submit" class="btn btn-sm btn-delete">Delete Event</button>
                                        </form>
                                    </div>
                                </div>

                                <p><strong>@ev.ApprovedCount Approved Participant(s)</strong></p>
                                @if (ev.PendingRequests.Count > 0)
                                {
                                    <div class="requests-section"><h4>Pending Requests</h4>
                                    @foreach (var request in ev.PendingRequests)
                                    {
                                        <div class="request-item"><span>@($"{request.FirstName} {request.LastName}")</span>
                                        <div class="event-actions">
                                                <form action="Event" method="POST" style="display:inline;">
                                                    <input type="hidden" name="action" value="manage_request">
                                                    <input type="hidden" name="request_id" value="@request.RequestId">
                                                    <input type="hidden" name="new_status" value="approved">
                                                    <button type="submit" class="btn btn-sm btn-approve">Approve</button>
                                                </form>
                                                <form action="Event" method="POST" style="display:inline;">
                                                    <input type="hidden" name="action" value="manage_request">
                                                    <input type="hidden" name="request_id" value="@request.RequestId">
                                                    <input type="hidden" name="new_status" value="declined">
                                                    <button type="submit" class="btn btn-sm btn-decline">Decline</button>
                                                </form>
                                              </div></div>
                                    }
                                    </div>
                                }
                                else
                                {
                                    <p>No pending requests.</p>
                                }
                            </div>
                        }
                    }
                    else
                    {
                        <p>You have not created any events yet.</p>
                    }
                </div>
            }
            else
            {
                <div class="card"><h1>Upcoming Events Schedule</h1></div>
                <div class="card">
                    @if (Model.FoundEvents)
                    {
                        foreach (var ev in Model.ScheduleEvents)
                        {
                            <div class="event-list-item">
                                <div class="event-header">
                                    <div class="event-details">
                                        <h3>@ev.Title</h3>
                                        @if (ev.IsStartingSoon)
                                        {
                                            <p class="starting-soon-notif"><strong><i class="fas fa-bell"></i> Starting in @ev.MinutesUntilStart minutes!</strong></p>
                                        }
                                        <p><strong>Starts:</strong> @ev.StartTimeText</p>
                                        <p><strong>Organizer:</strong> @ev.OrganizerName</p>
                                    </div>
                                    <div class="event-actions">
                                        @if (ev.RequestStatus == "approved")
                                        {
                                            <button class="btn view-details-btn" data-target="#details-@ev.EventId">View Details</button>
                                        }
                                        else if (string.IsNullOrEmpty(ev.RequestStatus))
                                        {
                                            <form action="Dashboard/Event?view=schedule" method="POST">
                                                <input type="hidden" name="action" value="request_to_join">
                                                <input type="hidden" name="event_id" value="@ev.EventId">
                                                <button type="submit" class="btn">Request to Join</button>
                                            </form>
                                        }
                                        else
                                        {
                                            <span class="status-badge status-@ev.RequestStatus">@ev.RequestStatusLabel</span>
                                        }
                                    </div>
                                </div>
                                @if (ev.RequestStatus == "approved")
                                {
                                    <div id="details-@ev.EventId" class="full-event-details hidden">
                                        <h4>Event Description</h4>
                                        <p>@Html.Raw(ev.DescriptionHtml)</p>
                                        @if (!string.IsNullOrEmpty(ev.MeetingUrl))
                                        {
                                            <a href="@ev.MeetingUrl" target="_blank" class="btn btn-approve"><i class="fas fa-video"></i> Join Event</a>
                                        }
                                        else
                                        {
                                            <p><em>Meeting link is not available.</em></p>
                                        }
                                    </div>
                                }
                            </div>
                        }
                    }
                    else
                    {
                        <p>There are no upcoming events scheduled at this time.</p>
                    }
                </div>
            }
